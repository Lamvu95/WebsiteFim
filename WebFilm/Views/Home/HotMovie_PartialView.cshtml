@using WebFilm.Models;
@model List<Table_Fim>
<div class="head-upper mb25">
    <div class="heading">
        <span class="title">Phim lẻ hot</span>
        <div class="wrap-nav">
            <nav class="uk-navbar nav-ad">
                <div class="uk-navbar-flip">
                    <ul class="uk-navbar-nav">
                        <li><a href="">Hành động</a></li>
                        <li><a href="">Hài hước</a></li>
                        <li><a href="">Hoạt hình</a></li>
                        <li><a href="">Hình sự</a></li>
                    </ul>
                </div>
            </nav><!-- nav -->
        </div><!-- .wrap-ad -->
    </div><!-- .heading -->
    @*<img src="images/upload/ad2.png" alt="Quảng cáo" />*@
</div><!--.head-upper -->
<div class="main-upper">
    <div class="uk-grid uk-grid-width-1-2 uk-grid-width-medium-1-4 uk-grid-small uk-grid-match" data-uk-grid-match="{target:'.product-name'}">
    @foreach (var item in Model)
    {
        <div class="wrap">
                <div class="product uk-position-relative">
                    <a href="@Url.Action("phim/"+@item.IDFim, "Home")"><img src="~/Content/image_webfim/@item.AnhPhim" alt="" /></a>
                    @*<ul class="list-icon uk-list uk-position-absolute">
                        <li><i class="uk-icon-home"></i></li>
                        <li><i class="uk-icon-heart"></i></li>
                        <li><i class="uk-icon-shopping-cart"></i></li>
                        <li><i class="uk-icon-search-plus"></i></li>
                    </ul>*@<!-- .list-icon -->
                    <div class="detail">
                        <span class="fa fa-star-0"></span>
                        <h3 class="product-name uk-margin-remove"><a href="@Url.Action("phim/"+@item.IDFim, "Home")">@item.NameFim</a></h3>
                    </div>
                </div><!-- .product -->
            </div><!--.wrap -->
    }
    </div><!-- .ukgrid -->
</div><!-- .main-upper -->
